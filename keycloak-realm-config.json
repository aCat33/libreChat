{
  "realm": "librechat-test",
  "enabled": true,
  "displayName": "LibreChat Test Realm",
  "displayNameHtml": "<b>LibreChat</b> Test",
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  
  "clients": [
    {
      "clientId": "librechat",
      "name": "LibreChat Application",
      "description": "LibreChat OIDC Client",
      "enabled": true,
      "publicClient": false,
      "protocol": "openid-connect",
      "rootUrl": "http://localhost:3080",
      "baseUrl": "http://localhost:3080",
      "redirectUris": [
        "http://localhost:3080/*",
        "http://localhost:3080/oauth/openid/callback"
      ],
      "webOrigins": [
        "http://localhost:3080"
      ],
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "authorizationServicesEnabled": false,
      "secret": "librechat-test-secret-12345",
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    }
  ],
  
  "users": [
    {
      "username": "admin",
      "enabled": true,
